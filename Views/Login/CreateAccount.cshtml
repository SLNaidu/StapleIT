@model User
<div class="container">
    <h1><b>StapleIT</b></h1>
    <br>
    <h3>Create your StapleIT user account</h3>
    <br>
    <p>Already have an account? <a asp-action="Index" asp-controller="Login">Sign In</a></p>
    <br>
    <form asp-action="CreateAccount">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="FristName">FirstName</label>
                <span style="color:red">*This field is required</span> <!--Span is a placeholder for actual validation-->
                <input type="text" class="form-control" id="firstname" asp-for="FName"  placeholder="FirstName">
            </div>
            <div class="form-group col-md-6">
                <label for="LastName">LastName</label>
                <span style="color:red">*This field is required</span>
                <input type="text" class="form-control" id="lastname" asp-for="LName" placeholder="LastName">
            </div>
            <div class="form-group col-md-6">
                <label for="Email">Email</label>
                <span style="color:red">*This field is required</span>
                <input type="email" class="form-control" id="email" asp-for="EmailAdd" placeholder="Email">
            </div>
            <div class="form-group col-md-6">
                <label for="Password">Phone</label>
                <input type="text" class="form-control" id="phone" asp-for="PhoneNum" placeholder="Phone">
            </div>
            <div class="form-group col-md-6">
                <label for="password">Create Password</label>
                <span style="color:red">*This field is required</span>
                <input type="password" class="form-control" id="password" asp-for="Password" placeholder="Create Password">
            </div>
            <div class="form-group col-md-6">
                <label for="password">Confirm Password</label>
                <span style="color:red">*This field is required</span>
                <input type="password" class="form-control" id="password" placeholder="Confirm Password">
            </div>
            <br>
            <input type="submit" class="btn btn-primary pull-right" value="Create Account" />
        </div>

    </form>
</div>