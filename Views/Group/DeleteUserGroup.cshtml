<!--Notes for future:Show which list the user is deleting on screen. Add nicer formatting.-->
<div class="container-fluid">
    <div class="row">
        <h3 class="alert-danger">Are you sure you want to delete this User</h3>

        <form asp-action="DeleteUserGroup">
             <div class="form-group">
            <label for="sel1" class="form-label">Select User (select one):</label>
            &nbsp;
              <select class="form-control" id="sel1" name="userId">
                  <option> --Select User--</option>
                        @foreach (var v in Model.Users)
                        {
                                <option value="@v.UserId">@(v.FName + " " + v.LName)</option>
                        }


                 </select>
             </div>
            <div class="form-group">
                 <input type="hidden" asp-for="@Model.groupId" />
                <a asp-action="Index" class="btn btn-info">Cancel</a>
                <input type="submit" value="Delete UserGroup" class="btn btn-primary" />
            </div>
         </form>
    </div>
</div>