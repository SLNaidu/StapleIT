@model dynamic

@section heads{
    <link rel="stylesheet" href="~/Content/CreateList.css" />

}
<navbar>
    <div id="header">
        <div class="waviy">
            <span style="--i:1">S</span>
            <span style="--i:2">T</span>
            <span style="--i:3">A</span>
            <span style="--i:4">P</span>
            <span style="--i:5">L</span>
            <span style="--i:6">E</span>
            <span style="--i:7">I</span>
            <span style="--i:8">T</span>
            <span style="--i:8">.</span>
            <a asp-action="Index" asp-controller="Login" style="text-transform: uppercase; padding-top: 20px; color: #fff;" class="pull-right"><b>Logout</b></a>
        </div>
            
        
    </div>
    <div class="underline-title"></div>
    <ul id="nav" class="nav nav-tabs">
        <li class="active">
            <a asp-action="Index" class="active" asp-controller="Home"><b>Home</b></a>
        </li>
        <li class="inactive">
            <a asp-action="Index" asp-controller="List">Lists</a>
        </li>
        <li>
            <a asp-action="Index"  asp-controller="Group">Groups</a>
        </li>
        
    </ul>
</navbar>

    <br>

    <div class="container-fluid">
    <div class="module-heading">

        <span class="module-header-title">
            Items
        </span>

        <a asp-action="Search" class="btn btn-primary pull-right">Search For staple</a>

        <a asp-action="Create" class="btn btn-primary pull-right">Add new staple</a>

    </div>

        <table class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    
                    <th>
                        Staple
                    </th>
                    <th>
                        Description
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody> 
                @foreach (var v in Model.Items)
                {
                    <tr>
                       
                        <td>
                            @v.ItemName
                        </td>
                        <td>
                            @v.Description
                        </td>

                        <td> 
                           <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                Add &nbsp;
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                @foreach (var l in Model.Lists)
                                {
                                    <li><a asp-action="AddtoList" asp-route-id="@v.ItemId" asp-route-ListId="@l.ListId">@l.ListName</a></li>
                                }
                            </ul>
                          
                           </div>
                        </td>

                    <td>
                        <a asp-action="Delete" asp-route-id=@v.ItemId asp-controller="Home" data-toggle="tooltip" data-placement="right" title="Delete"><i class="glyphicon glyphicon-trash"></i></a>
                    </td>

                    </tr>

                }
            </tbody>
        </table>
    </div>
    



